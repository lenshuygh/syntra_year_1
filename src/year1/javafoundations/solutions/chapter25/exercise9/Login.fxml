<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="year1.javafoundations.solutions.chapter25.exercise9.LoginController"
          styleClass="gridPane">
    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>
    <Label text="Name:" GridPane.rowIndex="0"
           GridPane.columnIndex="0" />
    <TextField fx:id="name" promptText="Enter name"
               GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="Password:" GridPane.rowIndex="1"
           GridPane.columnIndex="0" />
    <PasswordField fx:id="password" promptText="Enter password"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="Register" onAction="#login" GridPane.rowIndex="2"
            GridPane.columnIndex="0" />
    <Label fx:id="message" text="Enter you name and password"
           GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>